<%= form_for [@user, @image], class: 'form-vertical' do |f| %>
  <div class="form-group">
    <%= f.label :upload %>
    <%= f.file_field :upload %>
  </div>
  <div class="form-group">
    <%= f.label :title, "Title", class: 'label-control' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :caption, "Caption",  class: 'label-control' %>
    <%= f.text_area :caption, class: 'form-control' %>
  </div>

  <%= f.button :submit, class: 'form-control' %>
<% end %>
